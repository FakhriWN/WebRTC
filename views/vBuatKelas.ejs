<body>
<header>
        
</header>
<div class="container-fluid">
    <div class="col-lg-12" style="padding: 20px 10px;">
        <h1 class="text-center">Virtual Classroom</h1>
    </div>
    <div class="col-md-12">
        <div style="width:70%;" class="mx-auto">
        <div class="card bg-light mb-3">
            <h5 class="card-header">Membuat Kelas</h5>
            <div class="card-body">
                <form action="/kelas" method="post">
                <input type="text" class="form-control" name="open" value="true" hidden>
                <input type="text" class="form-control"  placeholder="Nama Ruangan" name="sessionid" id="session-id" hidden>
                <!--<input type="text" class="form-control" name="sessionid" id='sessionid'>-->
                <input type="text" class="form-control" name="PRI" id='PRI' hidden>
                    <div class="form-group">
                        <label>Nama Ruangan</label>
                        <input type="text" class="form-control" placeholder="..." name="namaRuangan" required>
                    </div>
                    <div class="form-group">
                        <label>Nama Fasilitator</label>
                        <input type="text" class="form-control" placeholder="..." name="nama" required>
                    </div>
                    <div class="form-group">
                        <label>Durasi (Menit)</label>
                        <input type="number" min="1" class="form-control col-sm-2" value="1" name="durasi" required>
                        <!--<small class="form-text text-muted">Menit</small>-->
                    </div>
                    <div class="form-group">
                        <label>Jumlah Partisipan</label>
                        <input type="number" min="1" class="form-control col-sm-2" value="1" name="maxPartisipan" required>
                    </div>
                    <button type="submit" class="btn btn-primary" id="btn-submit" >Buat</button>
                </form>
            </div>
        </div>
        </div>
    </div>
</div>

    <script src="/js/hBuatMasukKelas.js"></script>
</body>
